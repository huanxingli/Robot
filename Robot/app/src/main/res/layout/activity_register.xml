<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/activity_pink">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_user"
                android:src="@drawable/img_user"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入用户名"
                android:selectAllOnFocus="true"
                android:id="@+id/register_user"
                android:background="@null"
                android:layout_toRightOf="@+id/image_user"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_password"
                android:src="@drawable/img_password"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入密码"
                android:selectAllOnFocus="true"
                android:id="@+id/register_password"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_toRightOf="@+id/image_password"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_password2"
                android:src="@drawable/img_password"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请再次输入密码"
                android:selectAllOnFocus="true"
                android:id="@+id/register_surepsd"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_toRightOf="@+id/image_password2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_phone"
                android:src="@drawable/image_phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入手机号"
                android:selectAllOnFocus="true"
                android:id="@+id/register_phone"
                android:inputType="number"
                android:background="@null"
                android:layout_toRightOf="@+id/image_phone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/image_phone2"
                android:src="@drawable/image_phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入验证码"
                android:selectAllOnFocus="true"
                android:id="@+id/phone_code"
                android:inputType="number"
                android:background="@null"
                android:layout_toRightOf="@+id/image_phone2"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/register_btn_code"
                android:layout_toStartOf="@+id/register_btn_code" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="13sp"
                android:background="@drawable/code_btn_bg"
                android:id="@+id/register_btn_code"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="注    册"
        android:id="@+id/register_btn_sure"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_bg"/>


</LinearLayout>